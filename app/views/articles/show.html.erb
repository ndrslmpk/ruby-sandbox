<h1><%= @article.title %></h1>
<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article), data:
  {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %></li>
</ul>

<h2>Comments</h2>

<%# This will render the _comment.html partial for each comment that is in the @article.comments collection. It furthermore assigns each varuiable to a local variable%>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<!-- 
  @method build 
  creates a new object in memory 
  -->
<%= form_with model: [ @article,
  @article.comments.build ] do |form|
%>
  <p>
    <%= form.label :commenter %> <br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </p>
  <p>
  <%= form.submit %>
  </p>
<% end %>